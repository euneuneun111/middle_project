<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.application.dao.FundingOptionDAO">

    <!-- 1. 특정 FNO에 해당하는 옵션 목록 조회 -->
    <select id="getOptionsByFundingId" resultType="com.application.dto.FundingOptionVO" parameterType="int">
        SELECT OPTION_ID,
               FNO,
               OPTION_NAME,
               OPTION_PRICE
        FROM FUNDING_OPTION
        WHERE FNO = #{fundingId}
    </select>

    <!-- 2. 펀딩 옵션 삽입 -->
    <insert id="insertFundingOption" parameterType="com.application.dto.FundingOptionVO">
        INSERT INTO FUNDING_OPTION (
            OPTION_ID,
            FNO,
            OPTION_NAME,
            OPTION_PRICE
        ) VALUES (
            #{optionId},
            #{fno},
            #{optionName},
            #{optionPrice}
        )
    </insert>

    <!-- 3. FNO로 옵션 전체 삭제 -->
    <delete id="deleteOptionsByFundingId" parameterType="int">
        DELETE FROM FUNDING_OPTION
        WHERE FNO = #{fundingId}
    </delete>

</mapper>
